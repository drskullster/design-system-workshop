{
  "source": ["tokens/*.json"],
  "platforms": {
    "css": {
      "transforms": ["attribute/cti", "size/px", "name/kebab", "color/css"],
      "buildPath": "build/",
      "files": [
        {
          "destination": "tokens.css",
          "format": "css/variables"
        }
      ]
    },
    "js": {
      "transforms": ["attribute/cti","name/pascal", "color/hex"],
      "buildPath": "build/",
      "files": [{
        "destination": "tokens.js",
        "format": "javascript/module"
      }]
    }
  }
}
